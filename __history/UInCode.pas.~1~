unit UInCode;

interface

uses System.Classes, SysUtils, Vcl.Forms, Vcl.ComCtrls;

TFileNameNode = class
private
  Path, FFileName, Ext:String;
    function GetFileName: String;
    function GetFullPathFileNameExt: string;
public
  constructor Create(PathFileNameExt:String);
  destructor Destroy;
  function RenameInDrive(NewFileName:String):Boolean; /// Renombra en el Disco Duro
  function IsFolder:Boolean;
published
  property FileName:String read GetFileName;
  property FullPathFileNameExt:string read GetFullPathFileNameExt;
end;


implementation

end.
